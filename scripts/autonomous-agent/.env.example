# Copy to .env locally; do not commit .env
# See docs/ENV.md for full documentation

# Required
JIRA_URL=https://your-instance.atlassian.net
JIRA_USERNAME=your-email@example.com
JIRA_TOKEN=your-jira-api-token
GITHUB_TOKEN=your-github-token

# Optional (with defaults)
REPO_PATH=/path/to/your/repo
FEATURE_BRANCH=feature/agent
PRODUCT_DISCOVERY_PROJECT=EA
SOFTWARE_PROJECT=KAN
ESCALATION_EMAIL=your-email@example.com

# Optional (email escalation)
GMAIL_ADDRESS=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Optional (guardrails override)
ENGINE_MAX_CHANGED_FILES=15
