{
  "name": "engineo",
  "version": "1.3.2",
  "private": true,
  "description": "EngineO.ai â€“ Discovery Engine Optimization on Autopilot",
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api start:dev",
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:api\"",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "build": "pnpm build:web && pnpm build:api",
    "lint": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm test:api",
    "test:api": "pnpm --filter api test:api",
    "test:unit": "pnpm --filter api test:unit",
    "test:api:critical": "pnpm --filter api test:api:critical",
    "test:web": "pnpm --filter web test",
    "test:e2e": "pnpm --filter web test:e2e",
    "e2e:dev": "NODE_ENV=test ENGINEO_ENV=test ENGINEO_E2E=1 pnpm dev",
    "db:test:migrate": "pnpm --filter api db:test:migrate",
    "db:test:reset": "pnpm --filter api db:test:reset",
    "test:shopify:live": "ENGINEO_LIVE_SHOPIFY_TEST=1 pnpm --filter api test:shopify:live",
    "test:shopify:live:dry": "ENGINEO_LIVE_SHOPIFY_TEST=1 pnpm --filter api test:shopify:live:dry",
    "jira:create": "ts-node --project apps/api/tsconfig.json scripts/create-jira-ticket.ts",
    "jira:read": "ts-node --project apps/api/tsconfig.json scripts/read-jira-tickets.ts",
    "jira": "ts-node --project apps/api/tsconfig.json scripts/jira-crud.ts",
    "prepare": "husky install || true"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
